{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "build/",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
      "es6",
      "es2017.object"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "cypress",
    "webpack",
    "config",
    "coverage",
    "jest",
    "src/setupTests.ts",
    "src/**/*.js",
    "src/**/*/*.blob.ts"
  ],
  "include": [
    "src"
  ]
}
